<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout android:gravity="end"
        android:id="@+id/linearColumnarrowLeftOne"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" >
        <androidx.appcompat.widget.Toolbar
            style="@style/groupStyle_6"
            android:id="@+id/toolbarToolbar"
            android:paddingTop="@dimen/_16pxv"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:contentInsetStart="0dp">
            <LinearLayout android:id="@+id/linearRowarrowleft"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_15pxv"
                android:layout_marginHorizontal="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_15pxv"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:id="@+id/back"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_24pxh"
                    android:layout_marginBottom="@dimen/_13pxv"
                    android:layout_marginTop="@dimen/_13pxv"
                    android:layout_width="@dimen/_24pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_arrow_left_indigo_900"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_arrow_left_indigo_900"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageDiscussion"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_50pxh"
                    android:layout_marginStart="@dimen/_29pxh"
                    android:layout_width="@dimen/_50pxh"
                    android:scaleType="fitXY"
                   app:shapeAppearance="@style/photoCorner"
                    tools:ignore="ContentDescription"
                    android:src="@drawable/profil_vide"/>
                <TextView android:ellipsize="end"
                    android:layout_marginStart="@dimen/_8pxh"
                    android:layout_gravity="center"
                    android:id="@+id/nameFriend"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    style="@style/txtRobotomedium18_1"
                    android:text="@string/lbl_username"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/layoutChat"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_alignParentBottom="true"

                android:padding="4dp">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabSendMessage"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="@dimen/_8pxh"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="Envoyer un message"
                    app:tint="@color/indigo_900"
                    app:backgroundTint="@color/blue_100_01"
                    android:src="@drawable/img_save"
                    app:fabSize="normal" />

                <EditText
                    android:id="@+id/editMessage"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="16dp"
                    android:layout_toStartOf="@id/fabSendMessage"
                    android:hint="@string/lbl_message2"
                    style="@style/groupStylecornerRadius"
                    android:paddingStart="10dp" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvChatList"
                android:paddingVertical="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/layoutChat"
                tools:itemCount="6"
                tools:listitem="@layout/item_chat_right" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
