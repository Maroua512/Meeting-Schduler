<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txtDeleteaccount"
        style="@style/txtPoppinssemibold24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/_12pxh"
        android:singleLine="true"
        android:text="@string/lbl_delete_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDescription"
        style="@style/txtPoppinsregular16_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16pxh"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/_7pxh"
        android:text="@string/msg_are_you_sure_you"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtDeleteaccount" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/oldPassword"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_16pxh"
        android:hint="@string/old_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtDescription"
        app:passwordToggleEnabled="true"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Parcent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/linearRowno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24pxh"
        android:layout_marginBottom="@dimen/_16pxh"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/oldPassword">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btncancel"
            style="@style/btnSolidRoundedOutline_4"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:gravity="center"
            android:text="@string/lbl_cancel" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDelete"
            style="@style/btnSolidRounded_14"
            android:layout_width="@dimen/_120pxh"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8pxh"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/lbl_delete" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
