<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Forme">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/back1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24pxh"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:text="Create New Event"
            android:textColor="@color/black_900_02"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/back"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/file_add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back"
            android:layout_marginTop="@dimen/_24pxh"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180pxh">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/file"
                style="@style/groupStylewhite_A700_4"
                android:layout_marginHorizontal="@dimen/_24pxh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription" />
            <ImageView
                android:id="@+id/insertFile"
                android:layout_width="@dimen/_50pxh"
                android:layout_height="@dimen/_50pxh"
                android:layout_gravity="center"
                android:layout_marginHorizontal="32dp"
                android:layout_marginBottom="@dimen/_32pxh"
                android:layout_marginTop="@dimen/_70pxv"
                android:background="@drawable/transparence"
                android:scaleType="fitXY"
                android:src="@drawable/img_download"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/txtDescriptionTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_48pxh"
                android:layout_marginTop="@dimen/_12pxh"
                android:background="@drawable/transparence"
                android:ellipsize="end"
                android:padding="4dp"
                android:layout_marginBottom="@dimen/_32pxh"
                android:text="@string/lbl_import_image"
                style="@style/txtPoppinsmedium20_1" />
        </FrameLayout>
        <GridLayout
            android:layout_marginTop="@dimen/_24pxh"
            android:id="@+id/grid_files"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/file_add"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Example of a file item in the grid -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/files"
                    android:layout_width="@dimen/_50pxh"
                    android:layout_height="@dimen/_50pxh"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginBottom="@dimen/_32pxh"
                    android:layout_marginTop="@dimen/_70pxv"
                    android:background="@drawable/transparence"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_download"
                    tools:ignore="ContentDescription" />  <!-- Placeholder for file icon -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="File 1"
                    android:ellipsize="end"
                    android:maxLines="1"/>
            </LinearLayout>

        </GridLayout>
        <!-- Event Details Form -->
        <EditText
            android:id="@+id/input_event_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Event Name"
            app:layout_constraintTop_toBottomOf="@id/grid_files"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <Spinner
            android:id="@+id/input_event_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/input_event_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/input_event_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Select Date and Time"
            app:layout_constraintTop_toBottomOf="@id/input_event_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <EditText
            android:id="@+id/input_event_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Event Description"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/input_event_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Submit Button -->
        <Button
            android:id="@+id/button_publish_event"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Publish Now"
            app:layout_constraintTop_toBottomOf="@id/input_event_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
