<?xml version="1.0" encoding="UTF-8"?>
<androidx.cardview.widget.CardView android:id="@+id/linearMessagepictures"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:elevation="@dimen/_24pxh"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_16pxh"
        >

        <TextView
            android:id="@+id/txtDescriptive"
            style="@style/txtPoppinsmedium24_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/lbl_profile_photo" />

        <LinearLayout
            android:id="@+id/linearRowcameraOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_24pxh"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_16pxh">

            <LinearLayout
                android:id="@+id/camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16pxh"
                android:layout_marginBottom="@dimen/_1pxv"
                android:gravity="start"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/frameStackcameraOne"
                    style="@style/groupStylecornerRadius_10"
                    android:layout_width="@dimen/_80pxh"
                    android:layout_height="@dimen/_80pxv"
                    android:paddingHorizontal="@dimen/_9pxh"
                    android:paddingVertical="@dimen/_9pxv">

                    <ImageView
                        android:id="@+id/imageCameraOne"
                        android:layout_width="@dimen/_60pxh"
                        android:layout_height="@dimen/_60pxh"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_camera_60x60"
                        tools:ignore="ContentDescription" />
                </FrameLayout>

                <TextView
                    android:id="@+id/txtCameraTwo"
                    style="@style/txtPoppinsmedium16_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_camera" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/frameStackpicture"
                    style="@style/groupStylecornerRadius_10"
                    android:layout_width="@dimen/_80pxh"
                    android:layout_height="@dimen/_80pxv"
                    android:layout_gravity="center_horizontal"
                    android:paddingHorizontal="@dimen/_9pxh"
                    android:paddingVertical="@dimen/_9pxv">

                    <ImageView
                        android:id="@+id/imagePictureOne"
                        android:layout_width="@dimen/_60pxh"
                        android:layout_height="@dimen/_60pxh"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_picture"
                        tools:ignore="ContentDescription" />
                </FrameLayout>

                <TextView
                    android:id="@+id/txtGallery"
                    style="@style/txtPoppinsmedium16_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:text="@string/lbl_gallery" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    </androidx.cardview.widget.CardView>

