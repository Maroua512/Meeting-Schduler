<?xml version="1.0" encoding="UTF-8"?>
<androidx.cardview.widget.CardView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout android:id="@+id/linearMessageForm"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_8pxh" >

        <TextView
            android:layout_marginEnd="8dp"
            android:id="@+id/txtConfirmation"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            style="@style/txtPoppinsmedium20_1"
            android:textAlignment="center"
            android:text="@string/msg_are_you_sure_you2"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearContainer"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20pxv"
            android:layout_width="match_parent" android:orientation="vertical">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nomGroupe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16pxh"
                android:hint="@string/msg_enter_a_username"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Parcent"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:drawableEnd="@drawable/email_icon1"
                    />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16pxh"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/_18pxh"
                style="@style/txtIntermedium16"
                android:text="Select an image for your groupe"
                android:gravity="center"
                />
            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="@dimen/_46pxh"
                android:layout_height="@dimen/_46pxh"
                android:layout_gravity="bottom|end"
                android:background="@drawable/rectangle_bg_white_a700_01_border_white_a700_01_radius_23"
                android:paddingHorizontal="@dimen/_11pxh"
                android:paddingVertical="@dimen/_11pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_line_design_edit_line"
                tools:ignore="ContentDescription"
                android:foregroundGravity="right"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearRowno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_16pxh"
            android:layout_marginHorizontal="@dimen/_16pxh"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNo"
                style="@style/btnSolidRoundedOutline_4"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:gravity="center"
                android:text="@string/lbl_cancel"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnYes"
                android:padding="8dp"
                style="@style/btnSolidRounded_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/_8pxh"
                android:gravity="center"
                android:text="@string/lbl_confirm"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
