<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <LinearLayout
        android:id="@+id/linearChat"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <TextView android:ellipsize="end"
            android:id="@+id/txtMessages"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginStart="@dimen/_42pxh"
            android:layout_width="wrap_content"
            android:singleLine="true"
            style="@style/txtRobotoregular30"
            android:text="@string/lbl_messages"/>
        <ImageView
            android:id="@+id/btnAdd"
            android:layout_width="@dimen/_50pxh"
            android:layout_height="@dimen/_50pxh"
            android:src="@drawable/ic_add"
            android:layout_gravity="right"
            android:layout_marginEnd="@dimen/_16pxh"
            />
        <!--            <androidx.appcompat.widget.SearchView-->
        <!--                android:background="@drawable/rectangle_border_indigo_900_bf_radius_15"-->
        <!--                android:gravity="center_horizontal"-->
        <!--                android:id="@+id/searchViewSearch"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_marginEnd="@dimen/_33pxh"-->
        <!--                android:layout_marginStart="@dimen/_32pxh"-->
        <!--                android:layout_marginTop="@dimen/_22pxv"-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:theme="@style/searchViewsearch"-->
        <!--                app:iconifiedByDefault="false"-->
        <!--                app:queryBackground="@android:color/transparent"-->
        <!--                app:queryHint="@string/lbl_search" -->
        <!--                app:searchIcon="@drawable/img_search_gray_600_02"/>-->
        <LinearLayout android:id="@+id/linearRowclients"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_23pxh"
            android:layout_marginTop="@dimen/_26pxv"
            android:layout_width="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtClients"
                style="@style/txtRobotoregular18_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:textColor="@color/indigo_900_66"
                android:paddingStart="@dimen/_4pxh"
                android:paddingTop="@dimen/_1pxv"
                android:paddingEnd="@dimen/_4pxh"
                android:paddingBottom="@dimen/_1pxv"
                android:singleLine="true"
                android:text="@string/lbl_etudiants" />
            <TextView android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@+id/txtEnseignants"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_19pxh"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_1pxv"
                android:paddingEnd="@dimen/_4pxh"
                android:paddingStart="@dimen/_4pxh"
                android:paddingTop="@dimen/_1pxv"
                android:singleLine="true"
                android:background="@drawable/stroke"
                style="@style/txtSolidRounded"
                android:text="@string/lbl_enseignants"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearColumnpeople"
            android:layout_marginTop="@dimen/_20pxv"
            android:layout_gravity="top|center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" android:orientation="vertical">
            <LinearLayout android:gravity="center_vertical"
                android:id="@+id/linearRowpeopleOne"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_18pxv"
                android:paddingEnd="@dimen/_32pxh"
                android:paddingStart="@dimen/_32pxh"
                android:paddingTop="@dimen/_18pxv"
                style="@style/groupStyle_1">
                <ImageView android:id="@+id/imagePeopleOne"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_40pxh"
                    android:layout_width="@dimen/_40pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_people"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_people"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtPrestataire"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18pxh"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    style="@style/txtRobotomedium18"
                    android:text="@string/msg_group"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@+id/btnJoin"
                    android:layout_gravity="center_vertical"
                    android:layout_height="32dp"
                    android:layout_marginBottom="@dimen/_7pxv"
                    android:layout_marginStart="@dimen/_79pxh"
                    android:layout_marginTop="@dimen/_7pxv"
                    android:layout_width="wrap_content"
                    android:textAllCaps="false"
                    style="@style/btnSolidRounded_5" android:text="@string/lbl_join"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDiscussion"
                android:layout_gravity="top|center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="13"
                tools:listitem="@layout/item_friend" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
